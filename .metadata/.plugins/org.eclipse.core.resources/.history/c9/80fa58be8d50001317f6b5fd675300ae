import android.view.Menu;
import android.view.MotionEvent;
import android.widget.TextView;

public class SecondScreen extends Activity {

	public Timer timer = new Timer(); //TAP_LIMIT second timer
	
	public final int TAP_LIMIT = 3;
	//public boolean tapLimitReached = false;
	
	public int lastTapCount = 0;
	public TapCounter counterBetweenTaps = new TapCounter(2000, 2000);
	
	public TextView findTheHandlesText;
	
