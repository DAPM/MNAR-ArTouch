	public boolean onTouchEvent(MotionEvent event)
	{		    
		   if(event.getAction() == MotionEvent.ACTION_UP)
		   { 
			   lastTapCount++;
			   counterBetweenTaps.resetCounter(); //reset counter between taps
			   if (lastTapCount == TAP_LIMIT) 
			   {
				   //languageTextView.setText(LANG_PICKED[langSelectat] + lastTapCount);
				   findTheHandlesText.setText(R.string.top_handle);
				   timer.cancel();
				   
				   //tapLimitReached = true;
			   } 
		   }
		  
		   return true;
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.main, menu);
		return true;
	}

}
